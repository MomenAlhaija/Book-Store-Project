@using BookStore.Models
@model CategoryModel
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" style="width:100%;padding:0% 5%">
    <h3 class="text text-danger">@ViewBag.ErrorMessage</h3>
    <div class="form-group">
        <label for="CategoryName">Category Name</label>
        <input type="text" value="@Model.CategoryName" class="form-control" id="CategoryName" placeholder="PleaseEnter Category Name"  required name="@nameof(Model.CategoryName)">
        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <label for="CategoryDesc">Categoy Desc</label>
        <input type="text" value="@Model.CategoryDescription" class="form-control" id="CategoryDesc" placeholder="Please Enter Category Desc" name="@nameof(Model.CategoryDescription)"  required />
        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
    </div>
    <button title="Add" class="btn btn-primary" style="margin-top:25px" type="submit">Add</button>
    <a title="Back" class="btn btn-secondary" href="@Url.Action("Index")" style="margin-top:25px">BackToList</a>
</form>



