@using BookStore.Models
@model CategoryModel
@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" style="width:100%;padding:0% 5%">
    <h3 class="text text-danger">@ViewBag.ErrorMessage</h3>
    <input type="hidden"  value="@Model.CategoryId" name="@nameof(Model.CategoryId)" />
    <div class="form-group">
        <label for="MaterialNameAr">Category Name</label>
        <input type="text" value="@Model.CategoryName" name="@nameof(Model.CategoryName)" class="form-control" id="MaterialNameAr" placeholder="PleaseEnter Category Name" required>
        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <label for="MaterialNameEn">Categoy Desc</label>
        <input type="text" value="@Model.CategoryDescription" class="form-control" id="MaterialNameEn" placeholder="Please Enter Category Desc" name="@nameof(Model.CategoryDescription)" required />
        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
    </div>
    <button title="Save" class="btn btn-primary" style="margin-top:25px" type="submit">Save Changes</button>
    <a title="Back" class="btn btn-secondary" href="@Url.Action("Index")" style="margin-top:25px">BackToList</a>
</form>