                }
            });
        });


        var currentYear = (new Date()).getFullYear();
        $('.datepicker').datepicker({
            dateFormat: 'yy-mm-dd',
            maxDate: '0',
            minDate: new Date(1900, 0, 1),
            changeMonth: true,
            changeYear: true,
            yearRange: '1900:' + currentYear
        });
    });
</script>