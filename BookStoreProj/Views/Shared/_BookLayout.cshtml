                success: function (response) {
                    window.location.href = '/Home/Index';
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });
        $('#Login').click(function () {
            $.ajax({
                url: '/LogIn/Login',
                type: 'GET',
                success: function (response) {
